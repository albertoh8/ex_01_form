<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/detail_toolbar"
        layout="@layout/view_collapse_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        style="@style/TextTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_s"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_toolbar"
        tools:text="Audio 21" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img"
        android:layout_width="0dp"
        android:layout_height="@dimen/img_size_m"
        android:layout_margin="@dimen/margin_size_m"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:shapeAppearanceOverlay="@style/AppShapeableImageCorner"
        tools:background="@tools:sample/avatars" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/data"
        style="@style/TextSizeM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_m"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/img"
        tools:text="Datos" />

    <com.google.android.material.card.MaterialCardView
        style="@style/AppCard2"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/margin_size_s"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/img"
        app:layout_constraintStart_toStartOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/data">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/factory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/margin_size_s"
                android:layout_marginStart="@dimen/margin_size_s"
                android:drawableStart="@drawable/ic_factory"
                tools:text="    Otros Salud y Belleza"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/margin_size_s"
                app:layout_constraintTop_toBottomOf="@id/factory"
                android:layout_marginStart="@dimen/margin_size_s"
                android:drawableStart="@drawable/ic_mail"
                tools:text="    Email no disponible"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mail"
                android:layout_marginTop="@dimen/margin_size_s"
                android:layout_marginStart="@dimen/margin_size_s"
                android:drawableStart="@drawable/ic_phone"
                tools:text="   9858949191 "/>


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/margin_size_s"
                android:layout_marginStart="@dimen/margin_size_s"
                app:layout_constraintTop_toBottomOf="@id/phone"
                android:drawableStart="@drawable/ic_web"
                android:layout_marginBottom="@dimen/margin_size_s"
                tools:text="   https://audio21 "/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>


